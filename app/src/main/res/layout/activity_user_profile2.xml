<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="68dp"
            android:layout_height="62dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/like_ala" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/komacona"
            android:gravity="bottom|center_horizontal"
            android:text="프로필 설정"
            android:textColor="@color/mainPink"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="62dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="39dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/like_ala" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/komacona"
        android:gravity="center_horizontal"
        android:paddingStart="25dp"

        android:paddingEnd="25dp"
        android:text="사용자에게 가장 적합한 대화를 제공하기 위한 단계입니다."
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/komacona"
        android:gravity="center|center_horizontal"
        android:text="우리 집 가족 구성원을 선택해주세요."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/komacona"
        android:gravity="center_horizontal"
        android:text="(선택하지 않은 구성원과 관련된 내용은 배제됩니다.)"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/mainGrid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:columnOrderPreserved="false"
        app:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/round"
            app:cardBackgroundColor="#E2DEDD"
            app:layout_gravity="center">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/komacona"
                android:gravity="center"
                android:text="엄마"
                android:textColor="#020202"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/round"
            app:cardBackgroundColor="#E2DEDD"
            app:layout_gravity="center">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/komacona"
                android:gravity="center"
                android:text="아빠"
                android:textColor="#020202"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/round"
            app:cardBackgroundColor="#E2DEDD"
            app:layout_gravity="center">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/komacona"
                android:gravity="center"
                android:text="딸"
                android:textColor="#020202"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:background="@drawable/round"
            app:cardBackgroundColor="#E2DEDD"
            app:layout_gravity="center">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/komacona"
                android:gravity="center"
                android:text="아들"
                android:textColor="#020202"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <Button
            android:id="@+id/startCardButton2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_rounded_button"
            android:fontFamily="@font/komacona"
            android:gravity="center|center_horizontal"
            android:text="대화주제 선택하기!"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>