<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:fontFamily="@font/komacona"
            android:text="원하는 대화주제를 선택해보세요!"
            android:textSize="16dp"/>

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        app:alignmentMode="alignMargins"
        app:columnCount="3"
        app:columnOrderPreserved="false"
        android:layout_marginTop="10dp"
        app:rowCount="3">

        <ImageView
            android:id="@+id/cardimage0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final0" />

        <ImageView
            android:id="@+id/cardimage1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final1" />

        <ImageView
            android:id="@+id/cardimage2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final2" />

        <ImageView
            android:id="@+id/cardimage3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final3" />

        <ImageView
            android:id="@+id/cardimage4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final4" />

        <ImageView
            android:id="@+id/cardimage5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final5" />

        <ImageView
            android:id="@+id/cardimage6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final6" />

        <ImageView
            android:id="@+id/cardimage7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final7" />

        <ImageView
            android:id="@+id/cardimage8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/final8" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="2.5"
            app:srcCompat="@drawable/user1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/startC"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strokebtn"
            android:fontFamily="@font/komacona"
            android:gravity="center"
            android:text="대화 시작하기"
            android:textColor="@color/black"
            android:textSize="17sp" />


        <!--        레이아웃에서 gravity를 맞추면 안에 내용물이 움직임-->

        <ImageButton
            android:id="@+id/diaryButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_weight="2.5"
            app:srcCompat="@drawable/heart1" />
    </LinearLayout>
</LinearLayout>