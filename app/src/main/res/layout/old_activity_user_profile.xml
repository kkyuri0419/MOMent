<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moment_background">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom|center_horizontal"
        android:text="프로필 설정"
        android:fontFamily="@font/komacona"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"

        android:fontFamily="@font/komacona"
        android:text="사용자에게 가장 적합한 대화를 제공하기 위한 단계입니다."
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|center_horizontal"

        android:fontFamily="@font/komacona"
        android:text="우리 집 가족 구성원을 선택해주세요."
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/komacona"
        android:text="(선택하지 않은 구성원과 관련된 내용은 배제됩니다.)"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/komacona"
        android:text="엄마"
        android:textColor="@color/white"
        android:textSize="33sp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/komacona"
        android:text="아빠"
        android:textColor="@color/white"
        android:textSize="33sp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/komacona"
        android:text="딸"
        android:textColor="@color/white"
        android:textSize="33sp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/komacona"
        android:text="아들"
        android:textColor="@color/white"
        android:textSize="33sp" />

    <Button
        android:id="@+id/StartCardButton"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pink_rounded_button"
        android:fontFamily="@font/komacona"
        android:text="대화카드 시작하기!"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>